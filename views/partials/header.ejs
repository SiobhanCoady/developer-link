<!DOCTYPE html>
<html>
  <head>
    <title>Web Dev Link</title>
    <!--Import Google Icon Font-->
      <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <!--Import materialize.css-->
      <link type="text/css" rel="stylesheet" href="/stylesheets/materialize.min.css"  media="screen,projection"/>
      <link rel='stylesheet' href='/stylesheets/style.css' />

      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>
  <body>

    <!-- Dropdown Structure -->
    <ul id="dropdown1" class="dropdown-content">
      <% if (currentUser) { %>
        <li><a href="/users/<%= currentUser.id %>">View Profile</a></li>
      <% } %>
      <li><a href="#!">Edit Profile</a></li>
      <% if (currentUser && currentUser.userType === 'nonprofit') { %>
        <li><a href="/projects/new">Create Project</a></li>
      <% } %>
      <li><a href="#!">Messages</a></li>
      <li class="divider"></li>
      <li><a href="/sessions/logout">Log Out</a></li>
    </ul>

    <nav class="white" role="navigation">
      <div class="nav-wrapper container">
        <a id="logo-container" href="/" class="brand-logo"><span class="text-white">Web Dev Link</span></a>
        <ul class="right hide-on-med-and-down">
          <li><a href="/developers">Browse Developers</a></li>
          <li><a href="/projects">Browse Projects</a></li>
          <!-- Dropdown Trigger -->
          <% if (currentUser) { %>
            <li><a class="dropdown-button" href="#!" data-activates="dropdown1">User Options<i class="material-icons right">arrow_drop_down</i></a></li>
          <% } else { %>
            <li><a href="/sessions/new">Sign In</a></li>
          <% } %>
        </ul>

        <ul id="nav-mobile" class="side-nav">
          <li><a href="/developers">Browse Developers</a></li>
          <li><a href="/projects">Browse Projects</a></li>
          <li class="divider"></li>
          <% if (currentUser) { %>
            <li><a href="/users/<%= currentUser.id %>">View Profile</a></li>
            <li><a href="#!">Edit Profile</a></li>
            <% if (currentUser && currentUser.userType === 'nonprofit') { %>
              <li><a href="/projects/new">Create Project</a></li>
            <% } %>
            <li><a href="#!">Messages</a></li>
            <li class="divider"></li>
            <li><a href="/sessions/logout">Log Out</a></li>
          <% } else { %>
            <li><a href="/sessions/new">Sign In</a></li>
          <% } %>
        </ul>
        <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
      </div>
    </nav>

    <% if ( info ) { %>
      <p>Message: <%= info %> </p>
    <% } %>
